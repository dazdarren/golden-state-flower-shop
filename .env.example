# Next.js environment variables
# Copy this file to .env.local for local development

# Required for sitemap and canonical URLs
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Florist One API credentials (set in Cloudflare Pages secrets)
# These are used for all API calls including fetching AuthorizeNet payment config
FLORISTONE_AFFILIATE_ID=your_affiliate_id
FLORISTONE_API_TOKEN=your_api_token

# Note: AuthorizeNet payment configuration is fetched automatically from Florist One API
# No additional payment keys need to be configured
